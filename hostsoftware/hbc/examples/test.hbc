machine my_machine {
  states { one, two, three };
  in(one) {
    if(device.endpoint == 23) {
      write device.other_endpoint := 42;
      goto two;
    }
  }
}

alias device {
  ip aaaa:aaaa:aaaa:aaaa:aaaa:aaaa:aaaa:aaaa;
  eids { 1, 2, 3 };
}

endpoint 0 {
  datatype UINT32;
  name device_descriptor;
  access read;
}

alias another_device {
  ip fe80:1111:2222:3333:4444:5555:6666:f00d;
  eids { 9 };
}

machine another_machine {
  states { bloerp };
  in(bloerp) {
    if(device.endpoint == 104.2345) { goto init; }
  }
}
